<Window x:Class="StudyMinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyMinder"
        xmlns:views="clr-namespace:StudyMinder.Views"
        xmlns:fluent="urn:fluent-styles"
        xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:services="clr-namespace:StudyMinder.Services"
        mc:Ignorable="d"
        Title="StudyMinder 3.0"
        Height="700"
        Width="1200"
        MinHeight="600"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{DynamicResource BackgroundBrush}">

    <WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="40"
                            ResizeBorderThickness="5"
                            GlassFrameThickness="5"
                            CornerRadius="0"
                            UseAeroCaptionButtons="True" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style x:Key="TitleBarButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="Foreground"
                    Value="{DynamicResource HeaderForegroundBrush}" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Padding"
                    Value="12,6" />
            <Setter Property="FontSize"
                    Value="12" />
            <Setter Property="FontWeight"
                    Value="Medium" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="{DynamicResource NavigationHoverBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="{DynamicResource NavigationSelectedBrush}" />
                                <Setter Property="Foreground"
                                        Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WindowControlButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="Foreground"
                    Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Width"
                    Value="40" />
            <Setter Property="Height"
                    Value="30" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="{DynamicResource NavigationHoverBrush}" />
                                <Setter Property="Foreground"
                                        Value="{DynamicResource HeaderForegroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimarySidebarButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Padding"
                    Value="0" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Foreground"
                    Value="{DynamicResource NavigationForegroundBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="{DynamicResource NavigationHoverBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="{DynamicResource NavigationHoverBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondarySidebarButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Margin"
                    Value="0" />
            <Setter Property="Padding"
                    Value="0" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Foreground"
                    Value="{DynamicResource NavigationForegroundBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="{DynamicResource NavigationHoverBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="{DynamicResource NavigationHoverBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource SecondarySidebarButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="0,8,0,0">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="{DynamicResource NavigationHoverBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="{DynamicResource NavigationHoverBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActiveSidebarButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="{DynamicResource NavigationSelectedBrush}" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Padding"
                    Value="0" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Foreground"
                    Value="{DynamicResource TextOnPrimaryBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActiveSubmenuButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="{DynamicResource NavigationSelectedBrush}" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Margin"
                    Value="0" />
            <Setter Property="Padding"
                    Value="0" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch" />
            <Setter Property="FontSize"
                    Value="13" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Storyboard x:Key="CollapseSidebar">
            <DoubleAnimation Storyboard.TargetName="SidebarBorder"
                             Storyboard.TargetProperty="Width"
                             To="65"
                             Duration="0:0:0.2" />
        </Storyboard>

        <Storyboard x:Key="ExpandSidebar">
            <DoubleAnimation Storyboard.TargetName="SidebarBorder"
                             Storyboard.TargetProperty="Width"
                             To="250"
                             Duration="0:0:0.2" />
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Grid.ColumnSpan="2"
                    shell:WindowChrome.IsHitTestVisibleInChrome="True">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="15,0">
                    <TextBlock Text="StudyMinder"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </Border>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="0,0,5,0">

                <Button x:Name="btnTheme"
                        Style="{StaticResource TitleBarButtonStyle}"
                        Click="btnTheme_Click"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True"
                        ToolTip="Alternar tema claro/escuro">
                    <icon:PackIconMaterial Kind="ThemeLightDark"
                                           Width="14"
                                           Height="14"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                </Button>

                <Button x:Name="btnNotify"
                        Style="{StaticResource TitleBarButtonStyle}"
                        Click="btnNotify_Click"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True"
                        ToolTip="Central de notificações">
                    <icon:PackIconMaterial Kind="Bell"
                                           Width="14"
                                           Height="14"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                </Button>

                <Border Width="1"
                        Height="20"
                        Background="{DynamicResource BorderBrush}"
                        Margin="8,0" />

                <Button x:Name="btnMinimize"
                        Style="{StaticResource WindowControlButtonStyle}"
                        Click="btnMinimize_Click"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True"
                        ToolTip="Minimizar">
                    <icon:PackIconMaterial Kind="WindowMinimize"
                                           Width="12" />
                </Button>

                <Button x:Name="btnMaximize"
                        Style="{StaticResource WindowControlButtonStyle}"
                        Click="btnMaximize_Click"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True"
                        ToolTip="Maximizar">
                    <Grid>
                        <icon:PackIconMaterial Kind="WindowMaximize"
                                               Width="12">
                            <icon:PackIconMaterial.Style>
                                <Style TargetType="icon:PackIconMaterial">
                                    <Setter Property="Visibility"
                                            Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=mainWindow, Path=WindowState}"
                                                     Value="Maximized">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </icon:PackIconMaterial.Style>
                        </icon:PackIconMaterial>
                        <icon:PackIconMaterial Kind="WindowRestore"
                                               Width="12">
                            <icon:PackIconMaterial.Style>
                                <Style TargetType="icon:PackIconMaterial">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=mainWindow, Path=WindowState}"
                                                     Value="Maximized">
                                            <Setter Property="Visibility"
                                                    Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </icon:PackIconMaterial.Style>
                        </icon:PackIconMaterial>
                    </Grid>
                </Button>

                <Button x:Name="btnClose"
                        Style="{StaticResource WindowCloseButtonStyle}"
                        Click="btnClose_Click"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True"
                        ToolTip="Fechar">
                    <icon:PackIconMaterial Kind="Close"
                                           Width="12" />
                </Button>
            </StackPanel>
        </Grid>

        <Border x:Name="SidebarBorder"
                Grid.Column="0"
                Grid.Row="1"
                Grid.RowSpan="2"
                Width="250"
                Background="{DynamicResource NavigationBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,1,0"
                Margin="0,8,0,0"
                CornerRadius="0,8,0,0"
                ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Button Grid.Row="0"
                        Name="BtnMenu"
                        Height="50"
                        Style="{StaticResource MenuButtonStyle}"
                        Click="BtnMenu_Click">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="65" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <icon:PackIconMaterial Kind="Menu"
                                               Width="16"
                                               Height="16"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Grid.Column="0" />
                        <TextBlock Text="Menu"
                                   Grid.Column="1"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"
                                   Margin="10,0,0,0"
                                   FontWeight="SemiBold" />
                    </Grid>
                </Button>

                <Grid Grid.Row="1"
                      Height="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <Image Source="/Images/logo.png"
                           Width="30"
                           Height="30"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           RenderOptions.BitmapScalingMode="HighQuality" />

                    <TextBlock Text="StudyMinder"
                               Grid.Column="1"
                               Style="{DynamicResource Title1Style}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis"
                               Margin="10,0,0,0"
                               FontWeight="SemiBold" />
                </Grid>

                <ScrollViewer Grid.Row="2"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="MenuStackPanel">

                        <Button Name="BtnHome"
                                Height="45"
                                Style="{StaticResource ActiveSidebarButtonStyle}"
                                Click="BtnHome_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="65" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <icon:PackIconMaterial Kind="Home"
                                                       Width="16"
                                                       Height="16"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Grid.Column="0" />
                                <TextBlock Text="Dashboard"
                                           Grid.Column="1"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="10,0,0,0" />
                            </Grid>
                        </Button>

                        <Button Name="BtnDisciplinas"
                                Height="45"
                                Style="{StaticResource PrimarySidebarButtonStyle}"
                                Click="BtnDisciplinas_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="65" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <icon:PackIconMaterial Kind="LibraryOutline"
                                                       Width="16"
                                                       Height="16"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Grid.Column="0" />
                                <TextBlock Text="Disciplinas"
                                           Grid.Column="1"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="10,0,0,0" />
                            </Grid>
                        </Button>

                        <Button Name="BtnEstudos"
                                Height="45"
                                Style="{StaticResource PrimarySidebarButtonStyle}"
                                Click="BtnEstudos_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="65" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <icon:PackIconMaterial Kind="ClockOutline"
                                                       Width="16"
                                                       Height="16"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Grid.Column="0" />
                                <TextBlock Text="Estudos"
                                           Grid.Column="1"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="10,0,0,0" />
                            </Grid>
                        </Button>
                        
                        <Button Name="BtnCicloEstudo"
                                Height="45"
                                Style="{StaticResource PrimarySidebarButtonStyle}"
                                Click="BtnCicloEstudo_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="65" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <icon:PackIconMaterial Kind="Autorenew"
                                                       Width="16"
                                                       Height="16"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Grid.Column="0" />
                                <TextBlock Text="Ciclo"
                                           Grid.Column="1"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="10,0,0,0" />
                            </Grid>
                        </Button>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Button Name="BtnRevisoes"
                                    Height="45"
                                    Style="{StaticResource PrimarySidebarButtonStyle}"
                                    Grid.Row="0"
                                    Click="BtnRevisoes_Click">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="65" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <icon:PackIconMaterial Kind="CalendarClockOutline"
                                                           Width="16"
                                                           Height="16"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Grid.Column="0" />
                                    <TextBlock Text="Revisões"
                                               Grid.Column="1"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="10,0,0,0" />
                                    <icon:PackIconMaterial x:Name="RevisoesExpandIcon"
                                                           Kind="ChevronDown"
                                                           Width="10"
                                                           Height="10"
                                                           VerticalAlignment="Center"
                                                           Grid.Column="2"
                                                           Margin="0,0,15,0" />
                                </Grid>
                            </Button>

                            <StackPanel Grid.Row="1"
                                        x:Name="RevisoesSubmenuPanel"
                                        Visibility="Collapsed">
                                <Button Name="BtnRevisoesClassicas"
                                        Height="40"
                                        Style="{StaticResource PrimarySidebarButtonStyle}"
                                        Click="BtnRevisoesClassicas_Click">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="65" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Método Clássico"
                                                   Grid.Column="1"
                                                   VerticalAlignment="Center"
                                                   FontSize="13"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="10,0,0,0" />
                                    </Grid>
                                </Button>

                                <Button Name="BtnRevisoes42"
                                        Height="40"
                                        Style="{StaticResource PrimarySidebarButtonStyle}"
                                        Click="BtnRevisoes42_Click">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="65" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Método 4.2"
                                                   Grid.Column="1"
                                                   VerticalAlignment="Center"
                                                   FontSize="13"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="10,0,0,0" />
                                    </Grid>
                                </Button>

                                <Button Name="BtnRevisoesCiclicas"
                                        Height="40"
                                        Style="{StaticResource PrimarySidebarButtonStyle}"
                                        Click="BtnRevisoesCiclicas_Click">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="65" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Método Cíclico"
                                                   Grid.Column="1"
                                                   VerticalAlignment="Center"
                                                   FontSize="13"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="10,0,0,0" />
                                    </Grid>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <Button Name="BtnEditais"
                                Height="45"
                                Style="{StaticResource PrimarySidebarButtonStyle}"
                                Click="BtnEditais_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="65" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <icon:PackIconMaterial Kind="ClipboardListOutline"
                                                       Width="16"
                                                       Height="16"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Grid.Column="0" />
                                <TextBlock Text="Editais"
                                           Grid.Column="1"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="10,0,0,0" />
                            </Grid>
                        </Button>

                        <Button Name="BtnComparador"
                                Height="45"
                                Style="{StaticResource PrimarySidebarButtonStyle}"
                                Click="BtnComparador_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="65" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <icon:PackIconMaterial Kind="ScaleBalance"
                                                       Width="16"
                                                       Height="16"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Grid.Column="0" />
                                <TextBlock Text="Comparador"
                                           Grid.Column="1"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="10,0,0,0" />
                            </Grid>
                        </Button>
                        
                        <Button Name="BtnCalendario"
                                Height="45"
                                Style="{StaticResource PrimarySidebarButtonStyle}"
                                Click="BtnCalendario_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="65" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <icon:PackIconMaterial Style="{DynamicResource CalendarioIconStyle}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Grid.Column="0" />
                                <TextBlock Text="Calendário"
                                           Grid.Column="1"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="10,0,0,0" />
                            </Grid>
                        </Button>

                        <Button Name="BtnGraficos"
                                Height="45"
                                Style="{StaticResource PrimarySidebarButtonStyle}"
                                Visibility="Collapsed"
                                Click="BtnGraficos_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="65" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <icon:PackIconMaterial Kind="ChartBarStacked"
                                                       Width="16"
                                                       Height="16"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Grid.Column="0" />
                                <TextBlock Text="Gráficos"
                                           Grid.Column="1"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="10,0,0,0" />
                            </Grid>
                        </Button>

                        <Button Name="BtnSobre"
                                Height="45"
                                Style="{StaticResource PrimarySidebarButtonStyle}"
                                Click="BtnSobre_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="65" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <icon:PackIconMaterial Kind="InformationOutline"
                                                       Width="16"
                                                       Height="16"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Grid.Column="0" />
                                <TextBlock Text="Sobre"
                                           Grid.Column="1"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="10,0,0,0" />
                            </Grid>
                        </Button>

                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="3">
                    
                    <Button Name="BtnConfiguracoes"
                            Height="45"
                            Style="{StaticResource PrimarySidebarButtonStyle}"
                            Click="BtnConfiguracoes_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="65" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <icon:PackIconMaterial Kind="Tools"
                                                   Width="16"
                                                   Height="16"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Grid.Column="0" />
                            <TextBlock Text="Configurações"
                                       Grid.Column="1"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"
                                       Margin="10,0,0,0" />
                        </Grid>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1"
              Grid.Row="1">
            <ContentControl x:Name="ContentArea"
                            Margin="0">
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <ContentPresenter Content="{Binding}" />
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>

            <ItemsControl ItemsSource="{Binding Source={x:Static services:NotificationService.Instance}, Path=Toasts}"
                          Style="{StaticResource ToastContainerStyle}"
                          VerticalAlignment="Bottom"
                          HorizontalAlignment="Left"
                          Margin="20,0,0,20"
                          Panel.ZIndex="999"
                          IsHitTestVisible="False" />
        </Grid>
    </Grid>
</Window>