<UserControl x:Class="StudyMinder.Controls.AccuracyPieChartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Título (Dinâmico) -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="0,0,0,12">
            <icon:PackIconMaterial Kind="{Binding IconKind, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   Width="20"
                                   Height="20"
                                   Foreground="{DynamicResource PrimaryBrush}"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center" />
            <TextBlock Text="{Binding TituloGrafico, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Style="{DynamicResource Title3Style}"
                       Margin="0"
                       VerticalAlignment="Center" />
        </StackPanel>

        <!-- Gráfico OxyPlot -->
        <oxy:PlotView Grid.Row="1"
                      Model="{Binding PlotModelAccuracyPie, RelativeSource={RelativeSource AncestorType=UserControl}}"
                      Background="Transparent"
                      Controller="{Binding PlotControllerAccuracyPie, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <oxy:PlotView.DefaultTrackerTemplate>
                <ControlTemplate>
                    <Border Background="#CC000000"
                            BorderThickness="1"
                            BorderBrush="#444"
                            CornerRadius="4"
                            Padding="8,6">
                        <StackPanel>
                            <TextBlock Text="{Binding Title}"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       FontSize="12" />
                            <TextBlock Text="{Binding Value, StringFormat='Valor: {0}'}"
                                       Foreground="#DDD"
                                       FontSize="11"
                                       Margin="0,4,0,0" />
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </oxy:PlotView.DefaultTrackerTemplate>
        </oxy:PlotView>

    </Grid>

</UserControl>
