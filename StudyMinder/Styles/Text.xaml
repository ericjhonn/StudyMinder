<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Título 1 -->
    <Style x:Key="Title1Style"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="24" />
        <Setter Property="FontWeight"
                Value="SemiBold" />
        <Setter Property="Foreground"
                Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="VerticalAlignment"
                Value="Top" />
    </Style>

    <!-- Título 2 -->
    <Style x:Key="Title2Style"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="18" />
        <Setter Property="FontWeight"
                Value="SemiBold" />
        <Setter Property="Foreground"
                Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="Margin"
                Value="0,0,0,8" />
    </Style>

    <!-- Título 3 -->
    <Style x:Key="Title3Style"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="FontWeight"
                Value="Regular" />
        <Setter Property="Foreground"
                Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="Margin"
                Value="0,0,0,8" />
    </Style>

    <!-- Título 3 -->
    <Style x:Key="Title4Style"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="12" />
        <Setter Property="FontWeight"
                Value="Regular" />
        <Setter Property="Foreground"
                Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="Margin"
                Value="0,0,0,5" />
    </Style>

    <!-- Texto 1 -->
    <Style x:Key="Text1Style"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="Foreground"
                Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
    </Style>

    <!-- Texto 2 -->
    <Style x:Key="Text2Style"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="12" />
        <Setter Property="Foreground"
                Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
    </Style>

    <!-- Texto 3 -->
    <Style x:Key="Text3Style"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="10" />
        <Setter Property="Foreground"
                Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
    </Style>

    <!-- Estatísticas Base -->
    <Style x:Key="StatisticsTextBaseStyle"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="12" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="Margin"
                Value="0" />
    </Style>
    <!-- Acertos (Verde Claro) -->
    <Style x:Key="AcertosTextStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource StatisticsTextBaseStyle}">
        <Setter Property="Foreground"
                Value="{DynamicResource AcertosBrush}" />
    </Style>
    <!-- Erros (Vermelho Coral) -->
    <Style x:Key="ErrosTextStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource StatisticsTextBaseStyle}">
        <Setter Property="Foreground"
                Value="{DynamicResource ErrosBrush}" />
    </Style>
    <!-- Questões (Vermelho Coral) -->
    <Style x:Key="QuestoesTextStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource StatisticsTextBaseStyle}">
        <Setter Property="Foreground"
                Value="{DynamicResource QuestoesBrush}" />
    </Style>
    <!-- Rendimento (Azul Brilhante) -->
    <Style x:Key="RendimentoTextStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource StatisticsTextBaseStyle}">
        <Setter Property="Foreground"
                Value="{DynamicResource RendimentoBrush}" />
    </Style>
    <!-- Horas Estudadas (Laranja Vibrante) -->
    <Style x:Key="HorasEstudadasTextStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource StatisticsTextBaseStyle}">
        <Setter Property="Foreground"
                Value="{DynamicResource HorasEstudadasBrush}" />
    </Style>
    <!-- Assuntos Total (Azul Info) -->
    <Style x:Key="AssuntosTotalTextStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource StatisticsTextBaseStyle}">
        <Setter Property="Foreground"
                Value="{DynamicResource AssuntosBrush}" />
    </Style>
    <!-- Estudos Total (Azul Pastel) -->
    <Style x:Key="EstudosTotalTextStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource StatisticsTextBaseStyle}">
        <Setter Property="Foreground"
                Value="{DynamicResource EstudosTotalBrush}" />
    </Style>
    <!-- Páginas Lidas (Amarelo Ouro) -->
    <Style x:Key="PaginasLidasTextStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource StatisticsTextBaseStyle}">
        <Setter Property="Foreground"
                Value="{DynamicResource PaginasLidasBrush}" />
    </Style>
    <!-- Progresso (Roxo) -->
    <Style x:Key="ProgressoTextStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource StatisticsTextBaseStyle}">
        <Setter Property="Foreground"
                Value="{DynamicResource ProgressoBrush}" />
    </Style>
    <!-- Assuntos Concluídos (Verde Esmeralda) -->
    <Style x:Key="AssuntosConcluidosTextStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource StatisticsTextBaseStyle}">
        <Setter Property="Foreground"
                Value="{DynamicResource AssuntosConcluidosBrush}" />
    </Style>

</ResourceDictionary>