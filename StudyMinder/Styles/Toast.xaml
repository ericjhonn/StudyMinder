<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:StudyMinder.Converters"
                    xmlns:local="clr-namespace:StudyMinder.Services">

    <!-- Easing Functions -->
    <CubicEase x:Key="EaseOutCubic"
               EasingMode="EaseOut" />
    <CubicEase x:Key="EaseInCubic"
               EasingMode="EaseIn" />
    <CubicEase x:Key="EaseInOutCubic"
               EasingMode="EaseInOut" />

    <converters:MessageTypeToColorConverter x:Key="MessageTypeToColorConverter" />
    <converters:MessageTypeToIconConverter x:Key="MessageTypeToIconConverter" />
    <converters:MessageTypeToAccentColorConverter x:Key="MessageTypeToAccentColorConverter" />

    <!-- Shadow Effect para Toast -->
    <DropShadowEffect x:Key="ToastShadowEffect"
                      Color="Black"
                      Opacity="0.5"
                      ShadowDepth="2"
                      BlurRadius="12" />

    <!-- DataTemplate para Toast Notification -->
    <DataTemplate DataType="{x:Type local:ToastViewModel}">
        <Border Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Margin="0,0,0,8"
                MinWidth="300"
                MaxWidth="400"
                Effect="{StaticResource ToastShadowEffect}"
                RenderTransformOrigin="0,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <TranslateTransform X="-350" />
                    <ScaleTransform ScaleX="1"
                                    ScaleY="1" />
                </TransformGroup>
            </Border.RenderTransform>

            <Border.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.X)"
                                             From="-350"
                                             To="0"
                                             Duration="0:0:0.4"
                                             EasingFunction="{StaticResource EaseOutCubic}" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="FrameworkElement.Unloaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.X)"
                                             From="0"
                                             To="-350"
                                             Duration="0:0:0.3"
                                             EasingFunction="{StaticResource EaseInCubic}" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>

            <Border BorderBrush="{Binding MessageType, Converter={StaticResource MessageTypeToAccentColorConverter}}"
                    BorderThickness="3,0,0,0"
                    CornerRadius="4"
                    Padding="16"
                    Background="Transparent">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{Binding MessageType, Converter={StaticResource MessageTypeToIconConverter}}"
                               FontSize="20"
                               Foreground="{Binding MessageType, Converter={StaticResource MessageTypeToColorConverter}}"
                               Margin="0,0,12,0"
                               VerticalAlignment="Top" />

                    <StackPanel Grid.Column="1"
                                Orientation="Vertical">
                        <TextBlock Text="{Binding Title}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   TextWrapping="Wrap" />

                        <TextBlock Text="{Binding Message}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   LineHeight="16"
                                   Margin="0,4,0,0" />
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </DataTemplate>

    <!-- ItemsControl para exibir Toasts -->
    <Style x:Key="ToastContainerStyle"
           TargetType="ItemsControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ItemsControl">
                    <StackPanel IsItemsHost="True"
                                Orientation="Vertical" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
