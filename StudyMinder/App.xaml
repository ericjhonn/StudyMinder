<Application x:Class="StudyMinder.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StudyMinder"
             xmlns:fluent="urn:fluent-styles"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:StudyMinder.Converters"
             DispatcherUnhandledException="Application_DispatcherUnhandledException"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Tema padrÃ£o Light -->
                <ResourceDictionary Source="pack://application:,,,/Resources/Themes/Dark.xaml"/>
                
                <!-- Estilos organizados por componente -->
                <ResourceDictionary Source="pack://application:,,,/Styles/Button.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/Pagination.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/Fields.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/ListView.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/Icon.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/Text.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/Card.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/HeaderFooter.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/Other.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/Toast.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
            <converters:BooleanToStatusConverter x:Key="BooleanToStatusConverter"/>
            <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
            <converters:DoubleToPercentageConverter x:Key="DoubleToPercentageConverter"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
            <converters:BooleanToTextConverter x:Key="BooleanToTextConverter"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
