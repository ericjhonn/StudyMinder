<?xml version="1.0" encoding="UTF-8"?>
<UserControl x:Class="StudyMinder.Views.ViewEditalEditarCronograma"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:views="clr-namespace:StudyMinder.Views"
             xmlns:behaviors="clr-namespace:StudyMinder.Behaviors"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Cabeçalho do cronograma -->
        <Grid Grid.Row="0"
              Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0"
                       Grid.Row="0"
                       Text="Eventos do Cronograma"
                       Style="{DynamicResource Title2Style}" />
            
            <!-- TextBox de Pesquisa (Comum aos dois modos) -->
            <TextBox Grid.Column="0"
                     Grid.Row="1"
                     Margin="0,0,8,0"
                     Style="{StaticResource TextBoxPesquisarStyle}"
                     HorizontalAlignment="Stretch"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Tag="Pesquisar eventos" />
            
            <Button Grid.Column="1"
                    Grid.Row="1"
                    Style="{StaticResource ModernButtonStyle}"
                    Command="{Binding AdicionarEventoCommand}">
                <StackPanel Orientation="Horizontal">
                    <icon:PackIconMaterial Kind="Plus"
                                           Width="16"
                                           Height="16"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0" />
                    <TextBlock Text="Adicionar Evento"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </Grid>

        <!-- Loading Indicator e Estado Vazio -->
        <views:LoadingAndEmptyStatePanel Grid.Row="1" />

        <!-- ListView de eventos com edição inline -->
        <ListView x:Name="EventosListView"
                  Grid.Row="1"
                  ItemsSource="{Binding EventosView}"
                  Style="{DynamicResource ModernListViewStyle}"
                  Margin="0,0,-16,0"
                  VerticalAlignment="Stretch"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  ScrollViewer.IsDeferredScrollingEnabled="True"
                  VirtualizingPanel.ScrollUnit="Item"
                  VirtualizingPanel.CacheLength="10,10"
                  VirtualizingPanel.CacheLengthUnit="Page">
            <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{DynamicResource SecondaryCardStyle}"
                                Margin="0,0,0,8">
                            <StackPanel>

                                <Grid Visibility="{Binding IsEditing, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Evento}"
                                                   Style="{DynamicResource Title3Style}"
                                                   Margin="0,0,0,4" />

                                        <StackPanel Orientation="Horizontal">
                                            <icon:PackIconMaterial Kind="Calendar"
                                                                   Width="14"
                                                                   Height="14"
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,6,0" />
                                            <TextBlock Text="{Binding DataEvento, StringFormat='{}{0:dd/MM/yyyy}'}"
                                                       Style="{DynamicResource Text2Style}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <Border Grid.Column="1"
                                            CornerRadius="12"
                                            Padding="12,4"
                                            VerticalAlignment="Center"
                                            Margin="16,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background"
                                                        Value="{DynamicResource SuccessBrush}" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Concluido}"
                                                                 Value="False">
                                                        <Setter Property="Background"
                                                                Value="{DynamicResource WarningBrush}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Ignorado}"
                                                                 Value="True">
                                                        <Setter Property="Background"
                                                                Value="{DynamicResource TextSecondaryBrush}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <TextBlock Foreground="White"
                                                   FontSize="12"
                                                   FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text"
                                                            Value="Concluído" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Concluido}"
                                                                     Value="False">
                                                            <Setter Property="Text"
                                                                    Value="Pendente" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Ignorado}"
                                                                     Value="True">
                                                            <Setter Property="Text"
                                                                    Value="Ignorado" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>

                                    <StackPanel Grid.Column="2"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <Button Style="{StaticResource IconButtonStyle}"
                                                Command="{Binding DataContext.IniciarEdicaoEventoCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Editar">
                                            <icon:PackIconMaterial Style="{DynamicResource EditarIconStyle}" />
                                        </Button>
                                        <Button Style="{StaticResource IconButtonStyle}"
                                                Command="{Binding DataContext.RemoverEventoCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Remover">
                                            <icon:PackIconMaterial Style="{DynamicResource ExcluirIconStyle}" />
                                        </Button>
                                    </StackPanel>
                                </Grid>

                                <Grid Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
                                    
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0"
                                                 Text="{Binding Evento, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                                 Style="{DynamicResource ModernTextBoxWithPlaceholderStyle}"
                                                 Margin="0,0,8,0"
                                                 Tag="Nome do evento"
                                             behaviors:IconHelper.Icon="CalendarEdit"
                                             MaxLength="255" />

                                        <DatePicker Grid.Column="1"
                                                    SelectedDate="{Binding DataEvento}"
                                                    Style="{DynamicResource ModernDatePickerStyle}"
                                                    Margin="0"
                                                    Tag="Data do evento" />
                                    </Grid>
                                    
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left">
                                            
                                            <CheckBox IsChecked="{Binding Concluido}"
                                                      Content="Concluído"
                                                      Style="{DynamicResource RoundedCheckBoxStyle}"
                                                      Margin="0,0,8,0" />
                                            
                                            <CheckBox IsChecked="{Binding Ignorado}"
                                                      Content="Ignorado"
                                                      Style="{DynamicResource RoundedCheckBoxStyle}" />
                                        </StackPanel>

                                        <Button Grid.Column="1"
                                                Style="{DynamicResource SecondaryButtonStyle}"
                                                Command="{Binding DataContext.CancelarEdicaoEventoCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
                                                CommandParameter="{Binding}"
                                                Margin="0,0,8,0">
                                            <StackPanel Orientation="Horizontal">
                                                <icon:PackIconMaterial Kind="Close"
                                                                       Width="14"
                                                                       Height="14"
                                                                       Margin="0,0,6,0" />
                                                <TextBlock Text="Cancelar" />
                                            </StackPanel>
                                        </Button>
                                        
                                        <Button Grid.Column="2"
                                                Style="{DynamicResource ModernButtonStyle}"
                                                Command="{Binding DataContext.SalvarEventoCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
                                                CommandParameter="{Binding}"
                                                Padding="12,6"
                                                FontSize="12">
                                            <StackPanel Orientation="Horizontal">
                                                <icon:PackIconMaterial Style="{DynamicResource SalvarIconStyle}"
                                                                       Margin="0,0,6,0" />
                                                <TextBlock Text="Salvar" />
                                            </StackPanel>
                                        </Button>
                                        
                                    </Grid>           
                                </Grid>

                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

    </Grid>
</UserControl>
