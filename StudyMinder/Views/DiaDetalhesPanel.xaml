<?xml version="1.0" encoding="utf-8"?>
<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:StudyMinder.Views"
             mc:Ignorable="d"
             x:Class="StudyMinder.Views.DiaDetalhesPanel"
             Background="{DynamicResource BackgroundBrush}"
             Foreground="{DynamicResource TextPrimaryBrush}"
             d:DesignHeight="372.86"
             d:DesignWidth="659.377">

    <Border Style="{DynamicResource PrimaryCardStyle}"
            Margin="20,8,20,20"
            Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Cabeçalho -->
            <Grid Grid.Row="0"
                  Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Orientation="Vertical">
                    <TextBlock Text="Detalhes do Dia"
                               Style="{DynamicResource Title2Style}"
                               Margin="0,0,0,8" />
                    <TextBlock x:Name="TxtData"
                               Text="{Binding DataFormatada}"
                               Style="{DynamicResource Text2Style}"
                               Foreground="{DynamicResource TextSecondaryBrush}" />
                </StackPanel>

                <Button Grid.Column="1"
                        Style="{StaticResource IconButtonStyle}"
                        Click="BtnFechar_Click"
                        ToolTip="Fechar">
                    <icon:PackIconMaterial Kind="Close"
                                           Width="20"
                                           Height="20" />
                </Button>
            </Grid>

            <!-- Conteúdo -->
            <ScrollViewer Grid.Row="1"
                          Style="{DynamicResource ModernScrollViewerStyle}"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,0,0,16">

                    <!-- Estudos -->
                    <StackPanel x:Name="PanelEstudos"
                                Visibility="Collapsed"
                                Margin="0,0,0,16">
                        <TextBlock Text="Estudos"
                                   Style="{DynamicResource Title3Style}"
                                   Margin="0,0,0,8"
                                   Foreground="{DynamicResource PrimaryBrush}" />
                        <ItemsControl x:Name="ListEstudos"
                                      ItemsSource="{Binding Estudos}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{DynamicResource SecondaryCardStyle}"
                                            Margin="0,0,0,8"
                                            Padding="12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0">
                                                <TextBlock Text="{Binding Assunto.Nome}"
                                                           FontWeight="SemiBold"
                                                           TextTrimming="CharacterEllipsis"
                                                           Margin="0,0,0,4" />
                                                <StackPanel Orientation="Horizontal" 
                                                           Margin="0,0,0,0">
                                                    <TextBlock Text="{Binding Assunto.Disciplina.Nome, StringFormat=\{0:HH:mm\}}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                                    <TextBlock Text=" • "
                                                               FontSize="12"
                                                               Foreground="{DynamicResource TextSecondaryBrush}" 
                                                               Margin="4,0,4,0"/>
                                                    <TextBlock Text="{Binding Duracao, StringFormat=\{0:hh\\:mm\}}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                                </StackPanel>
                                            </StackPanel>

                                            <Button Grid.Column="1"
                                                    Style="{DynamicResource IconButtonStyle}"
                                                    ToolTip="Editar Estudo"
                                                    Command="{Binding DataContext.EditarEstudoCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                    CommandParameter="{Binding}">
                                                <icon:PackIconMaterial Kind="FileDocumentEdit"
                                                                       Width="16"
                                                                       Height="16"
                                                                       Foreground="{DynamicResource PrimaryBrush}" />
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Eventos de Editais -->
                    <StackPanel x:Name="PanelEventos"
                                Visibility="Collapsed"
                                Margin="0,0,0,16">
                        <TextBlock Text="Eventos de Editais"
                                   Style="{DynamicResource Title3Style}"
                                   Margin="0,0,0,8"
                                   Foreground="{DynamicResource SuccessBrush}" />
                        <ItemsControl x:Name="ListEventos"
                                      ItemsSource="{Binding EventosEditais}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{DynamicResource SecondaryCardStyle}"
                                            Margin="0,0,0,8"
                                            Padding="12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0">
                                                <TextBlock Text="{Binding Evento}"
                                                           FontWeight="SemiBold"
                                                           TextTrimming="CharacterEllipsis"
                                                           Margin="0,0,0,4" />
                                                <TextBlock Text="{Binding Edital.Nome}"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                            </StackPanel>

                                            <Button Grid.Column="1"
                                                    Style="{DynamicResource IconButtonStyle}"
                                                    ToolTip="Mover para outra data"
                                                    Command="{Binding DataContext.MoverEventoCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                    CommandParameter="{Binding}">
                                                <icon:PackIconMaterial Kind="CalendarEdit"
                                                                       Width="16"
                                                                       Height="16"
                                                                       Foreground="{DynamicResource SuccessBrush}" />
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Revisões -->
                    <StackPanel x:Name="PanelRevisoes"
                                Visibility="Collapsed">
                        <TextBlock Text="Revisões Programadas"
                                   Style="{DynamicResource Title3Style}"
                                   Margin="0,0,0,8"
                                   Foreground="{DynamicResource WarningBrush}" />
                        <ItemsControl x:Name="ListRevisoes"
                                      ItemsSource="{Binding Revisoes}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{DynamicResource SecondaryCardStyle}"
                                            Margin="0,0,0,8"
                                            Padding="12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0">
                                                <TextBlock Text="{Binding EstudoOrigem.Assunto.Nome}"
                                                           FontWeight="SemiBold"
                                                           TextTrimming="CharacterEllipsis"
                                                           Margin="0,0,0,4" />
                                                <TextBlock Text="{Binding EstudoOrigem.Assunto.Disciplina.Nome}"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                            </StackPanel>

                                            <Button Grid.Column="1"
                                                    Style="{DynamicResource IconButtonStyle}"
                                                    ToolTip="Iniciar Revisão"
                                                    Command="{Binding DataContext.IniciarRevisaoCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                    CommandParameter="{Binding}">
                                                <icon:PackIconMaterial Kind="Play"
                                                                       Width="16"
                                                                       Height="16"
                                                                       Foreground="{DynamicResource WarningBrush}" />
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Rodapé -->
            <Border Grid.Row="2"
                    BorderThickness="0,1,0,0"
                    BorderBrush="{DynamicResource BorderBrush}"
                    Padding="0,16,0,0">
                <TextBlock x:Name="TxtResumo"
                           Text="{Binding Resumo}"
                           Style="{DynamicResource Text2Style}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           TextAlignment="Center" />
            </Border>
        </Grid>
    </Border>
</UserControl>
