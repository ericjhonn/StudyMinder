<UserControl x:Class="StudyMinder.Views.LoadingAndEmptyStatePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:StudyMinder.Converters"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <UserControl.Resources>
        <converters:LoadingAndEmptyStateConverter x:Key="LoadingAndEmptyStateConverter" />
    </UserControl.Resources>

    <Grid>
        <!-- Loading Indicator -->
        <!-- Visível apenas quando IsCarregando = true -->
        <ContentControl Style="{DynamicResource LoadingCard1Style}"
                        d:Visibility="Hidden">
            <ContentControl.Visibility>
                <MultiBinding Converter="{StaticResource LoadingAndEmptyStateConverter}" ConverterParameter="loading">
                    <Binding Path="IsCarregando" />
                    <Binding Path="FilteredCount" />
                </MultiBinding>
            </ContentControl.Visibility>
        </ContentControl>

        <!-- Estado vazio -->
        <!-- Visível apenas quando IsCarregando = false E FilteredCount = 0 -->
        <ContentControl Style="{DynamicResource EmptyStateStyle}"
                        d:Visibility="Visible">
            <ContentControl.Visibility>
                <MultiBinding Converter="{StaticResource LoadingAndEmptyStateConverter}" ConverterParameter="empty">
                    <Binding Path="IsCarregando" />
                    <Binding Path="FilteredCount" />
                </MultiBinding>
            </ContentControl.Visibility>
        </ContentControl>
    </Grid>
</UserControl>
